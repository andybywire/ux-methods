---
layout: base.njk
pagination:
  data: methods
  alias: resource
  size: 1
permalink: /method/{{ resource.slug }}/index.html
---
<p><a href="/">< back to index</a></p> {# temporary #}

<article>
  <section> 
    {% basicHero resource.heroImage %}
    <h1>{{ resource.title }}</h1>
    <p>{{ resource.overview | safe }}</p>
  </section>
  <section>  
    <h2>Preparation</h2>
    <ul>    
      {% for method in resource.prepareMethods.slice(0,6) %}
        {% methodCard method %}
      {% endfor %}
    </ul>
  </section>
  <section>
    <h2>Steps</h2>
    <p>{{ resource.steps | safe }}</p>
  </section>
  <section>
    <h2>Outcomes</h2>
    <p>{{ resource.title }} typically produces insight and solutions focused on these areas:</p>
    <ul>
      {% for outcome in resource.outcomes %}
        <li>
          <h3>{{ outcome.prefLabel }}</h3>
          <p>{{ outcome.definition }}</p>
        </li>
      {% endfor %}
    </ul>
  </section>
  <section>  
    <h2>Resources</h2>
    <ul>    
      {% for resource in resource.resources.slice(0,6) %}
        <li>
          {% if resource.resourceImage %}
            {% basicImage resource.resourceImage %}
          {% endif %}
          <a href="{{ resource.resourceUrl }}">{{ resource.title }}</a>
          <p>{{ resource.author }} | {{ resource.publisher }}</p>
        </li>
      {% endfor %}
    </ul>
  </section>
  <section>  
    <h2>Next Steps</h2>
    <ul>    
      {% for method in resource.continueMethods.slice(0,6) %}
        {% methodCard method %}
      {% endfor %}
    </ul>
  </section>
  <section>  
    <h2>References</h2>
    {# FPO: citations #}
    <p>FPO</p>
  </section>
</article>
