---
layout: base.njk
pagination:
  data: disciplines
  alias: resource
  size: 1
permalink: /discipline/{{ resource.slug }}/index.html
---
<article class="discipline">
  <section class="overview discipline"> 
    <div class="hero">    
      {% basicHero resource.heroImage %}
    </div>
    <div class="discipline-summary">
      <div class="header">
        <h1>{{ resource.title }}</h1>
      </div>
      <div class="description">
        <p>{{ resource.overview | safe }}</p>
      </div>
    </div>
  </section>
  </section>
  <section>  
    <h2>{{ resource.title | safe }} Methods</h2>
    <ul class="grid">
      {% for method in resource.methods %}
        {% resourceCard method, "full-card"%}
      {% endfor %}
    </ul>
  </section>
</article>