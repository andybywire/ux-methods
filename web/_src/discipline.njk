---
layout: base.njk
pagination:
  data: disciplines
  alias: resource
  size: 1
permalink: /discipline/{{ resource.slug }}/index.html
---
<article>
  <section> 
    {% basicHero resource.heroImage %}
    <h1>{{ resource.title }}</h1>
    <p>{{ resource.metaDescription }}</p>
    {{ resource.overview | safe }}
  </section>
  <section>  
    <h2>{{ resource.title | safe }} Methods</h2>
    <ul>
      {% for method in resource.methods %}
        {% resourceCard method %}
      {% endfor %}
    </ul>
  </section>
</article>