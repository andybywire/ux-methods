---
import '@styles/normalize.css'
import '@styles/variables.css'
import '@styles/global.css'
import {Font} from 'astro:assets'
import Footer from '@components/Footer.astro'
import type {SITE_METADATA_QUERYResult} from 'sanity.types'

type SiteMetadata = NonNullable<SITE_METADATA_QUERYResult>

interface Props {
  data: SiteMetadata
}

const {
  data,
  data: {layout},
} = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{`${layout && layout.title + ' | '} UX Methods | Astro`}</title>
    <Font cssVariable="--header" preload />
    <Font cssVariable="--body" preload />
  </head>
  <body>
    <a href="/">Back to Index</a>
    <main id="main-content">
      <!-- <pre>{JSON.stringify(data, null, 2)}</pre> -->
      <slot />
    </main>
    {data.footer && <Footer data={data} />}
  </body>
</html>
