---
import '@styles/normalize.css'
import '@styles/variables.css'
import '@styles/global.css'
import {Font} from 'astro:assets'
import Header from '@components/Header.astro'
import Footer from '@components/Footer.astro'
import type { FooterData } from '@components/Footer.astro'

interface Props {
  data?: FooterData | null
  pageTitle?: string
}

const {data, pageTitle} = Astro.props

if (!data) {
  Astro.response.status = 404
  throw new Error('Not found')
}

---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle && pageTitle + ' | '} UX Methods | Astro</title>
    <Font cssVariable="--header" preload />
    <Font cssVariable="--body" preload />
    <script src="../scripts/header.js"></script>
    <!-- Create a slot here for JSON-LD -->
  </head>
  <body>
    <Header />
    <main id="main-content">
      <!-- <pre>{JSON.stringify(data, null, 2)}</pre> -->
      <slot />
    </main>
    {<Footer data={data} />}
  </body>
</html>
